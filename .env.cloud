# Cloud Run Backend Environment Variables
# Set these as Cloud Run service secrets or env vars

# MongoDB connection string (use MongoDB Atlas or Cloud SQL)
# Example MongoDB Atlas: mongodb+srv://user:password@cluster.mongodb.net/password_health
MONGO_URI=mongodb+srv://USERNAME:PASSWORD@CLUSTER.mongodb.net/password_health?retryWrites=true&w=majority

# JWT configuration
JWT_SECRET_KEY=your-very-secure-random-key-here-change-in-production

# Credential encryption key (Fernet symmetric key for credential storage)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
CREDENTIAL_ENCRYPTION_KEY=your-fernet-encryption-key-here

# OpenAI API Key (optional, for AI recommendations)
OPENAI_API_KEY=sk-your-key-here

# Flask environment
FLASK_ENV=production

# Port (Cloud Run requirement)
PORT=8080
